syntax on

set term=screen-256color

"colorscheme desert
"colorscheme default
set background=dark
colorscheme solarized

set nocompatible
set nowrap
set autoindent
set copyindent
set ignorecase
set smartcase
set showtabline=2
set textwidth=72
set history=1000
set undolevels=1000
set incsearch
set viminfo=""
set number
set ruler
set tabpagemax=100
filetype indent on
set directory=~/.swp//
set wildmode=longest,list 
set visualbell

set textwidth=72
set fo-=t

map <F7> :setlocal spell spelllang=en_us <cr>
map <F8> :setlocal spell spelllang= <cr>
map <F10> :set nonumber <cr>
map <F11> :set wrap <cr>
map <F12> :set textwidth=0 <cr>

set autoindent
set tabstop=4
set shiftwidth=4
set softtabstop=4
set hlsearch
set expandtab
set nocursorline

autocmd BufRead,BufNewFile *.prn set noexpandtab
autocmd FileType cpp set tabstop=2 | set softtabstop=2 | set shiftwidth=2 | set textwidth=120 | set noexpandtab
autocmd FileType python set tabstop=4 |set softtabstop=4 | set shiftwidth=4 | set expandtab

